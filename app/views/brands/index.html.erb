<div class="page-header">
  <h1>
    Brands
    <a href="/brands/new" class="btn btn-lg btn-success">New Brand</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">

      <% @brands.each do |brand| %>
      <tr>
        <td><a href="/brands/<%= brand.id %>"><%= brand.brand_name %></a></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @brands, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
