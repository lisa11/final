<div class="page-header">
  <h1>
    Products
    <a href="/products/new" class="btn btn-lg btn-success">New Product</a>
  </h1>
</div><div class="row mb-1">

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Brand</th>
          <th>Image</th>
          <th>Product name</th>
          <th>Shelf life</th>
          <th>Skin type</th>
          <th>Category</th>
          <th>Sensitive skin</th>
        </tr>

        <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.brand.present? %>
            <a href="/brands/<%= product.brand.id %>">
              <%= product.brand.brand_name %>
            </a>
            <% end %>
          </td>
          <td align="center"><img src="<%= product.image_url %>" height="150" width="auto"></td>
          <td>
            <a href="/products/<%= product.id %>">
              <%= product.product_name %>
            </a>
          </td>
          <td><%= product.shelf_life %></td>
          <td><%= product.skin_type %></td>
          <% if product.skincare %>
          <td><%= product.skincare_category %></td>
          <% elsif product.makeup %>
          <td><%= product.makeup_category %></td>
          <% end %>
          <td>
            <% if product.sensitive_skin%>
            Yes
            <% else %>
            No
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <%= paginate @products, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
