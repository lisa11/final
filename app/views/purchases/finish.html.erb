<div class="page-header">
  <h1>
    Emptied Purchases
  </h1>
</div><div class="row mb-1">

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Brand</th>
          <th>Image</th>
          <th>Product name</th>
          <th>Open Date</th>
          <th>Actual Number of Uses</th>
        </tr>

        <% @empty.each do |purchase| %>
        <tr>
          <td>
            <% if purchase.product.brand.present? %>
            <a href="/brands/<%= purchase.product.brand.id %>">
              <%= purchase.product.brand.brand_name %>
            </a>
            <% end %>
          </td>
          <td align="center"><img src="<%= purchase.product.image_url %>" height="150" width="auto"></td>
          <td>
            <a href="/purchases/<%= purchase.product.id %>">
              <%= purchase.product.product_name %>
            </a>
          </td>
          <td><%= purchase.open_date %></td>
          <td><%= purchase.uses.count %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
