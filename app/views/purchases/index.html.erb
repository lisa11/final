<div class="page-header">
  <h1>
    Purchases
    <a href="/purchases/new" class="btn btn-lg btn-success">New Purchase</a>
  </h1>
</div>

<% @purchases.each do |purchase|%>
<% if Use.where(user_id: current_user.id, purchase_id: purchase.id).count >= purchase.estimated_number_of_uses%>
<% if purchase.empty != true%>
<div class="alert alert-danger">
  <a href="/purchases/<%= purchase.id %>"><%= purchase.product.product_name %></a>
  is running out!</div>
  <% end %>
  <% end %>
  <% end %>



  <h3>Frequently Used</h3>
  <div class="container">
    <tr>
      <% @frequently.each do |purchase| %>
      <td class="col-md-3" style="display: block;">
        <a href="/purchases/<%= purchase.id %>"><img src="<%= purchase.product.image_url %>" height="300" width=auto></a>
      </td>
      <% end %>
    </tr>
  </div>

  <h3>Occassionally Used</h3>
  <div class="container">
    <tr>
      <% @occasional.each do |purchase| %>
      <td class="col-md-3" style="display: block;">
        <a href="/purchases/<%= purchase.id %>"><img src="<%= purchase.product.image_url %>" height="300" width=auto></a>
      </td>
      <% end %>
    </tr>
  </div>

  <h3>Rarely Used</h3>
  <div class="container">
    <tr>
      <% @rarely.each do |purchase| %>
      <td class="col-md-3" style="display: block;">
        <a href="/purchases/<%= purchase.id %>"><img src="<%= purchase.product.image_url %>" height="300" width=auto></a>
      </td>
      <% end %>
    </tr>
  </div>





