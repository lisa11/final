<div class="page-header">
  <h3><%= @use.purchase.product.product_name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Product</dt>
      <dd>
        <% if @use.purchase.present? %>
          <a href="/purchases/<%= @use.purchase_id %>">
            <img src="<%= @use.purchase.product.image_url %>" height="150px" width="auto">
          </a>
        <% end %>
      </dd>

      <dt>Use Date</dt>
      <dd><%= @use.date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/uses" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @use.user %>
        <a href="/delete_use/<%= @use.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
